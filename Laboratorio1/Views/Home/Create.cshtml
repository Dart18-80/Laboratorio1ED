@model Laboratorio1.Models.Jugador



<h1>Create</h1>

<h4>Jugador</h4>
<hr />
<form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post" class="mt-3">
    <div class="form-group row" >
        <label asp-for="FileC" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="FileC" class="form-control custom-file-input" />
                <label class="custom-file-label" >Choose File.......</label >
            </div>
        </div>
    </div>
    @section Scripts{ 
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var FileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(FileName);
                });
            });
        </script>
        }
</form>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <select class="form-control" asp-for="Position">
                        <option>M</option>
                        <option>F</option>
                        <option>D</option>
                        <option>GK</option>
                        <option>D-M</option>
                        <option>D-F</option>
                        <option>F-D</option>
                        <option>F-M</option>
                        <option>M-D</option>
                        <option>M-F</option>
                    </select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Club" class="control-label"></label>
                    <input asp-for="Club" class="form-control" />
                    <span asp-validation-for="Club" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>

