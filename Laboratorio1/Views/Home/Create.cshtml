    <div class="form-group row">
        <label asp-for="FileC" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-3">
            <div class="custom-file">
                <input asp-for="FileC" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File.......</label>
                <input type="submit" value="File" class="btn btn-info" asp-action="UploadFilecsv"/>
            </div>
        </div>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var filename = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(filename);
                });
            });
        </script>
    }
